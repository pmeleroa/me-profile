---
import { experience } from '../data/experience';
---

<section class="experience" id="experience">
  <div class="container">
    <div class="reveal">
      <span class="section-label">Experiencia</span>
      <h2 class="section-title">Trayectoria profesional</h2>
    </div>

    <div class="timeline">
      {experience.map((item, i) => (
        <div class={`timeline-item reveal reveal-delay-${i + 1}`}>
          <div class="timeline-dot"></div>
          <p class="timeline-date">{item.date}</p>
          <h3 class="timeline-role">{item.role}</h3>
          <div class="timeline-company-row">
            {item.logo && (
              <img
                src={`${import.meta.env.BASE_URL}${item.logo}`}
                alt={`Logo ${item.company}`}
                class="timeline-company-logo"
                onerror="this.style.display='none'"
              />
            )}
            <p class="timeline-company">{item.company}</p>
          </div>
          <p class="timeline-description">{item.description}</p>
          <div class="timeline-tags">
            {item.tags.map((tag) => (
              <span class="timeline-tag">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .timeline-company-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .timeline-company-logo {
    width: 24px;
    height: 24px;
    border-radius: 4px;
    object-fit: contain;
    flex-shrink: 0;
  }

  .timeline-company-row .timeline-company {
    margin-bottom: 0;
  }
</style>
